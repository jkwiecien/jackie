<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="net.techbrewery.jackie.controller.ControllerActivity">

    <TextView
        android:id="@+id/controllerIpAddressLabelAtConnectionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        tools:text="Controller IP address: 192.168.27.10" />

    <TextView
        android:id="@+id/robotIpAddressLabelAtConnectionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        tools:text="Robot IP address: 192.168.27.10" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/robotIpLastPartInputAtConnectionFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="Last part of ROBOT IP address"
            android:inputType="numberSigned" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/connectionButtonAtConnectionFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Connect" />

    <Button
        android:id="@+id/toggleLedButtonAtConnectionFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Toggle LED"
        android:visibility="gone" />

    <Button
        android:id="@+id/showRemoteButtonAtConnectionFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Show remote" />

    <TextView
        android:id="@+id/responseLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
</LinearLayout>
